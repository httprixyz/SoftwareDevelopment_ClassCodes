void main() {
  // função main é a porta de entrada do prog //void significa sem retorno, ele não retorna nada, apenas define
  saudacoes("priscila");
  funcao("Olá", null);
}

void saudacoes(
  String nome, {
  bool mostrarAgora = true,
  String? cliente,
}) {
  print("Saudações da ${nome.toUpperCase()}");
  String c = cliente ?? "colega";
  if (mostrarAgora) {
    print("Seja bem-vindo(a) ${c.toUpperCase()}");
  }
}

String agora() {
  DateTime agora = DateTime.now();
  return agora.toString();
}

