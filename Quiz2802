void main() {
  int numero = 17;
  
  bool ehPar = numero % 2 == 0;
  
  String mensagem = ehPar ? 'par' : 'ímpar';
  
  String separador = '-';
  
  DateTime agora = DateTime.now();
  
  print('${separador} ${numero} ${separador} é um número ${mensagem}'.toUpperCase());
  print('Data e hora atuais: $agora');
}
